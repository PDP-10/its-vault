: Dispatch for terminal location, type. 

:DDTSYM TTYTYP/
:IF N q&<%TYSTY+%TYDIL+%TYRLM>
 (:DDTSYM TCTYP/
   :IF N q-%TNSFW
    (: Outside TTY line. 
      :JUMP OTTY )
   :ELSE
    (: Must be on a supdup. 
      :JUMP SUPDUP ))
:ELSE
 (: Hardwired local line. 
   :JUMP LOCTTY )

:TAG ROLM
:Rolm terminal switch.
:TAG OTTY
: Probable outside tty types and locations.

:--AAA?--
:IF MORE 0
 (:TCTYP AAA PAGE 60
   :JUMP REST )

:--H19?--
:IF MORE 0
 (:TCTYP H19
   :JUMP REST )

:--TRS-80?--
:IF MORE 0
 (:tctyp vt52 width 31 page 16
   :ttyloc 86 Norfolk
   :jump rest )

