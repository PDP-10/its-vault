6TYPE:	SETZ T2,
	ROTC T1,6
	ADDI T2,40
	.IOT TTYo,T2
	JUMPN T1,6TYPE
	RETURN

HEXTYP:	MOVE T2,[200400,,T1]
	MOVEI T3,4		;4 chars/word
HEXTAG:	ILDB T4,T2
	CAILE T4,9.
	  ADDI T4,7
	ADDI T4,60
	.IOT TTYo,T4
	SOJN T3,HEXTAG
	RETURN

DECTYP:	SETZ T3,
DECTAG:	IDIVI T1,10.
	PUSH P,T2
	AOJ T3,
	JUMPN T1,DECTAG
TAGNO2:	POP P,T1
	ADDI T1,60
	.IOT TTYo,T1
	SOJN T3,TAGNO2
	RETURN

FILTYP:	MOVE T1,DEVICE
	CALL 6TYPE
	.IOT TTYo,[":]
	MOVE T1,SNAME
	CALL 6TYPE
	.IOT TTYo,[";]
	MOVE T1,FN1
	CALL 6TYPE
	.IOT TTYo,[" ]
	MOVE T1,FN2
	CALL 6TYPE
	RETURN

