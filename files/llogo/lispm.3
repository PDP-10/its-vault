;;; HENRY's LISPM init file.

(PKG-GOTO 'USER) ;; Somehow, starts up in the wrong package...

(LOGIN-EVAL (PROG2 (ADD-INITIALIZATION "HENRY'S INIT"
				       '(SETQ BASE 10. IBASE 10. *NOPOINT T)
				       '(WARM NOW))
		   '(PROGN (DELETE-INITIALIZATION "HENRY'S INIT" '(WARM))
			   (SETQ BASE 8. IBASE 8.))))

(SETQ BASE 10. IBASE 10. *NOPOINT T)

(DEFMACRO AUTOLOAD (FUNCTION FILE)
          `(FSET ',FUNCTION '(LAMBDA (&REST IGNORE)
				     (FMAKUNBOUND ',FUNCTION)
				     (REMPROP ',FUNCTION ':SOURCE-FILE-NAME)
				     (LET ((SI:INHIBIT-FDEFINE-WARNINGS T))
					  (LOAD ,FILE))
				     (APPLY #',FUNCTION IGNORE))))

(AUTOLOAD CURTAIN "Actor;^Curtin")

(AUTOLOAD TRYOUT "Llogo;Paces")

(AUTOLOAD TRYOUT-ASK "Llogo;Paces")

(AUTOLOAD TIPTOE "Llogo;^Step")

(AUTOLOAD STARTDISPLAY "LLogo;Lmt")

(AUTOLOAD SD "LLogo;Lmt")

(AUTOLOAD TINKER "Llogo;Loader")

(AUTOLOAD TINKER-WITH-GRAPHICS "Llogo;Loader")

(AUTOLOAD TINKER-WITH-MENUS "Llogo;Mdemo")

(AUTOLOAD DEMO "Llogo;Lmdemo")

(DEFUN HENRY-LISPM-INIT ()
       (LOAD "Llogo;Zwei")
       (LOAD "Llogo;Ztop") 
       (ED))


(SI:SB-ON 6) ;; Enable "sequence breaks", from keyboard and Chaos Net.

(HENRY-LISPM-INIT)
