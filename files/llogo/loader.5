(SSTATUS FEATURE TINKER)

(SETQ TINKER-FILES
      '("Tinker;Macros"
	"Tinker;Window"
	"Tinker;Ztproc"
	"Tinker;First"
	"Tinker;Result"
	"Tinker;Form"
	"Tinker;Error"
	"Tinker;Edit"
	"Tinker;If"
	"Tinker;Snap"
	"Tinker;CSnap"
	"Tinker;Tape"
	"Tinker;EdMenu"))

(SETQ TINKER-SOURCE-FILES (MAPCAR '(LAMBDA (FILE) (STRING-APPEND FILE " >")) TINKER-FILES))

(SETQ TINKER-SUPPORT-FILES
      '("Henry;Objpri"
	"LMFont;PRT12B"
	"LMFont;16FG"))

;; If files are added here, also see Tinker;Hard for making hard copy listing.

(EVAL-WHEN (COMPILE LOAD EVAL)
	   (COND ((NOT (STATUS FEATURE :SUBSYS))
		  (LOAD "Henry;SubSys")
		  (SSTATUS FEATURE SUBSYS))))

(SETQ TINKER (<- SUBSYSTEM ':NEW
		 ':NAME ':TINKER
		 ':DIRECTORY "AI:Tinker;"
		 ':FILES TINKER-FILES
		 ':SUPPORT-FILES TINKER-SUPPORT-FILES))

(COND ((NOT (STATUS FEATURE ZTOP)) (LOAD "Henry;Zwei") (LOAD "Henry;Ztop")))

(<- TINKER ':LOAD)



