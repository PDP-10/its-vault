(setq type-error '+internal-type-error)

(defun +internal-type-error (bad-type expected-type context)
       (princ '|Type error:  | tyo)
       (prin1 bad-type tyo)
       (princ '| wrong type in | tyo)
       (prin1 context tyo)
       (terpri tyo)
       (princ '|Expected type:  | tyo)
       (prin1 expected-type tyo)
       (break TYPE-ERROR)
       (throw 'TYPE-ERROR FATAL-ERROR))


(funcall type-error ....)
