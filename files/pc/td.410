BEGIN "TD"
COMMENT THIS THING MASSAGES .DRL FILES FROM PCP, WITH (HOPEFULLY) ENOUGH
	FLEXIBILITY TO PRODUCE PAPER TAPES SUITABLE FOR ANY EXCELLON OR MCC
	CIRCUIT BOARD DRILLING MACHINE.;

EXTERNAL INTEGER SKIP;
STRING OFFSTR;
INTEGER I,J,K,L,BRK,EOF,HOLES,WORD,FEED,ROTATE,XOFF,YOFF,ERRFLAG,TEMP,FLIP;
BOOLEAN ITS;
BOOLEAN MCODES;
BOOLEAN TFEEDS;
PRELOADWITH '40,1,2,'23,4,'25,'26,7,'10,'31;
INTEGER ARRAY DATA[0:9];
BOOLEAN XLON;
LABEL DEBUG;
DEFINE EOB="'200";
DEFINE MCHR="'130";
DEFINE XCHR="'67";
DEFINE YCHR="'70";
DEFINE MINUS="'100";
STRING S,SS,SSS,OUTDEV;
OUTSTR("TYPE Y IF TAPE IS IN EXCELLON MACHINE FORMAT
ELSE MCC MACHINE FORMAT WILL BE ASSUMED:");
XLON_((I_INCHWL)="Y")  (I="y");
FEED_(IF XLON THEN '20 ELSE '177);
IF XLON THEN BEGIN
		OUTSTR("TYPE Y IF M STOP CODES WANTED:");
		MCODES_((I_INCHWL)="Y")  (I="y");
		OUTSTR("TYPE Y IF TRAILING GOOD PARITY FEED WANTED:");
		TFEEDS_((I_INCHWL)="Y")  (I="y");
	     END;
OUTSTR("
NUMBER OF INCHES OF TAPE BETWEEN BREAKS (OR 0 FOR NO BREAKS)?");
I_CVD(INCHWL);
IF (HOLES_(I*10 DIV 13)) THEN HOLES_'77777777777;
OPEN(0,"DSK",'10,2,0,100,0,EOF);
OUTSTR("
TYPE DEVICE FOR OUTPUT ");
OUTDEV_INCHWL;
OPEN(1,OUTDEV,'10,0,2,0,0,0);
SETBREAK(1,"[.",NULL,"ISN");
SETBREAK(2,",",NULL,"ISN");
SETBREAK(3,","&'12,'15,"IS");
SETBREAK(4,";"&'40,NULL,"ISN");

ITS_1;

OUTSTR("
TYPE	TO GET
0	NO ROTATION
1	90 DEG CCW
2	90 DEG CW
3	180 DEG

ROTATE? ");
ROTATE_CVD(INCHWL);


OUTSTR("
TYPE	TO GET
0	NO FLIP
1	X FLIP
2	Y FLIP
3	BOTH FLIP

FLIP? ");
FLIP_CVD(INCHWL);

DO
 BEGIN
 ERRFLAG_FALSE;
 OUTSTR("

OFFSET IS APPLIED AFTER ROTATION AND FLIPPING, AND IS ENTERED HERE AS ""X,Y"",
WHERE X AND Y ARE (OPTIONALLY SIGNED) INTEGRAL NUMBERS OF MILS.  

OFFSET= ");
 OFFSTR_INCHWL;
 XOFF_INTSCAN(OFFSTR,BRK);
 IF BRK"," THEN ERRFLAG_TRUE
ELSE
  BEGIN
  YOFF_INTSCAN(OFFSTR,BRK);
  IF BRK THEN ERRFLAG_TRUE;
  END
 END
UNTIL ERRFLAG;


OUTSTR("

FILENAME?");

SSS_"";
S_INCHWL;
IF ITS THEN
	BEGIN
	SS_SCAN(S,4,I);
	IF I=";" THEN BEGIN
			SSS_SS&";";
			SS_SCAN(S,4,I)
			END;
	IF I='40 THEN S_SSS&SS&'40&S ELSE
		S_SSS&SS&" DRL";
	END ELSE
	BEGIN
	SS_SCAN(S,1,I);
	IF I="[" THEN S_SS&".DRL["&S ELSE
		IF I="." THEN S_SS&"."&S ELSE
			S_SS&".DRL";
	END;
LOOKUP(0,S,EOF);
IF EOF THEN USERERR(0,0,"LOOKUP FAILED ON "&S);
IF ITS THEN ENTER(1,SS&" PTP",0)
	ELSE ENTER(1,SS&".PTP",0);
"OUTPUT LOOP";
SETFORMAT(-5,0);
IF OUTDEV="PTP" THEN BEGIN 
	OUTSTR("CHECK PUNCH PAPER SUPPLY, THEN TYPE RETURN.");
	INCHWL;
	END;
WHILE EOF DO
	BEGIN
	FOR I_1 STEP 1 UNTIL 200 DO WORDOUT(1,FEED);
	IF XLON  MCODES THEN
		BEGIN
		WORDOUT(1,MCHR);
		WORDOUT(1,DATA[0]);
		WORDOUT(1,DATA[0]);
		WORDOUT(1,EOB)
		END
	       ELSE IF XLON THEN
		FOR I_1 STEP 1 UNTIL 5 DO
			BEGIN
			FOR J_1 STEP 1 UNTIL 12 DO WORDOUT(1,DATA[0]);
			WORDOUT(1,EOB)
			END;
	FOR I_1 STEP 1 UNTIL HOLES DO
		BEGIN
		INTEGER LHW,RHW;
		WORD_WORDIN(0);
		IF EOF THEN DONE;
		   QUICKCODE
		   HLRE '13,WORD;
		   MOVEM '13,LHW;
		   HRRE '13,WORD;
		   MOVEM '13,RHW
		   END;

		CASE ROTATE OF
			BEGIN
				;

				BEGIN "CCW"
				TEMP_LHW;
				LHW_-RHW;
				RHW_TEMP
				END "CCW";

				BEGIN "CW"
				TEMP_RHW;
				RHW_-LHW;
				LHW_TEMP
				END "CW";

				BEGIN "180"
				RHW_-RHW;
				LHW_-LHW
				END
			END;

		CASE FLIP OF
			BEGIN
				;
				LHW_-LHW;
				RHW_-RHW;
				BEGIN
					LHW_-LHW;
					RHW_-RHW
				END
			END;

		LHW_XOFF+LHW;
		RHW_YOFF+RHW;

		IF XLON THEN
			BEGIN
			WORDOUT(1,XCHR);
			J_LHW;
			IF J<0 THEN
				BEGIN
				J_-J;
				WORDOUT(1,MINUS)
				END;
			K_1;
			FOR I_4 STEP -1 UNTIL 0 DO
				BEGIN
				J_J-(K_(J DIV (L_10^I)))*L;
				WORDOUT(1,DATA[K]);
				IF J=0 THEN DONE
				END;
			WORDOUT(1,YCHR);
			J_RHW;
			IF J<0 THEN
				BEGIN
				J_-J;
				WORDOUT(1,MINUS)
				END;
			K_1;
			FOR I_4 STEP -1 UNTIL 0 DO
				BEGIN
				J_J-(K_(J DIV (L_10^I)))*L;
				WORDOUT(1,DATA[K]);
				IF J=0 THEN DONE
				END;
			END
		      ELSE
			BEGIN
			IF LHW<0  RHW<0 THEN
			   OUTSTR("NEGATIVE CO-ORDINATE--TAPE IS USELESS!!!"&'15&'12)
			 ELSE
			   BEGIN
			   S_CVS(RHW)&CVS(LHW);
			   FOR J_1 STEP 1 UNTIL 10 DO WORDOUT(1,DATA[S[J FOR 1]-'60]);
			   WORDOUT(1,DATA[0]);"MACHINE FUNCTION";
			   WORDOUT(1,DATA[1]);"DRILL SIZE"
			   END
			END;
		WORDOUT(1,EOB)
		END;
	IF MCODES THEN BEGIN
	IF XLON THEN BEGIN
		WORDOUT(1,MCHR);
		WORDOUT(1,DATA[0]);
		WORDOUT(1,DATA[0]);
		IF EOF THEN BEGIN
			WORDOUT(1,MCHR);
			WORDOUT(1,DATA[3]);
			WORDOUT(1,DATA[0]);
			END
		END
	      ELSE
		BEGIN
		FOR I_1 STEP 1 UNTIL 10 DO WORDOUT(1,DATA[0]);
		WORDOUT(1,DATA[3]);
		WORDOUT(1,DATA[0]);
		END;
	WORDOUT(1,EOB);
	END;
	IF TFEEDS THEN FOR I_1 STEP 1 UNTIL 400 DO WORDOUT(1,FEED);
	FOR I_1 STEP 1 UNTIL 400 DO WORDOUT(1,0);"FEED A LITTLE TAPE";
	END;
RELEASE(0);
RELEASE(1);
END;
